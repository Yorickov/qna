<% if answer.errors.any? %>
  var questionFormNode = document.querySelector('.answer-form-node');
  questionFormNode.innerHTML = '<%= j render 'answers/form_edit', answer: answer %>';

  var editAnswerForm = document.querySelector('#edit-answer-<%= answer.id %>');
  editAnswerForm.classList.remove('hidden');
<% else %>
  var answerNode = document.querySelector('li[data-answer-node-id="<%= answer.id %>"]');
  answerNode.parentNode.innerHTML = '<%= j render answer %>';
<% end %>
