var answerErrorsNode = document.querySelector('li[data-answer-node-id="<%= answer.id %>"] .answer-node-errors');
answerErrorsNode.innerHTML = '<%= j render 'shared/errors', resource: answer %>';

<% if @answer.errors.blank? %>
  var answerNode = document.querySelector('li[data-answer-node-id="<%= answer.id %>"]');
  answerNode.innerHTML = '<%= j render answer %>';
<% end %>
