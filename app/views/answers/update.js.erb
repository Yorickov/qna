document.querySelector('li[data-answer-node-id="<%= @answer.id %>"] .answer-node-errors')
  .innerHTML = '<%= j render 'shared/errors', resource: @answer %>';

<% if !@answer.errors.present? %>
  document.querySelector('li[data-answer-node-id="<%= @answer.id %>"]')
    .innerHTML = '<%= j render @answer %>';
<% end %>
