<% if @current_best_answer %>
  document.querySelector('<%= "#answer-node-#{@current_best_answer.id}" %>')
    .innerHTML = '<%= j render "answer", answer: @current_best_answer %>';
<% end %>

document.querySelector('<%= "#answer-node-#{@answer.id}" %>')
  .innerHTML = '<%= j render @answer %>';

document.querySelector('.answers')
  .prepend(document.querySelector('<%= "#answer-node-#{@answer.id}" %>'));
