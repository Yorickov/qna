<div class="card border-0" data-answer-node-id="{{answer.id}}">
  <div class= "card-body py-0">
    <div class="row no-gutters">
      <div class="col-md-1 d-flex flex-column align-items-center justify-content-center">

        <div class="voting d-flex flex-column align-items-center justify-content-center">
          <a href="/answers/{{answer.id}}/vote_up" class="vote-up" title="Lke" data-type="json" data-remote="true" rel="nofollow" data-method="patch">
            <svg width="25" class="octicon octicon-triangle-up" viewBox="0 0 12 16" version="1.1" hight="33" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 11L6 5l-6 6h12z"></path>
            </svg>
          </a>

          <div class="rating">
            <span class="text-center">{{answer.rating}}</span>
          </div>

          <a href="/answers/{{answer.id}}/vote_down" class="vote-down" title="Unlike" data-type="json" data-remote="true" rel="nofollow" data-method="patch">
            <svg width="25" class="octicon octicon-triangle-down" viewBox="0 0 12 16" version="1.1" hight="33" aria-hidden="true">
              <path fill-rule="evenodd" d="M0 5l6 6 6-6H0z"></path>
            </svg>
          </a>

          <a href="/answers/{{answer.id}}/vote_reset" class="vote-reset" title="Recall" data-type="json" data-remote="true" rel="nofollow" data-method="patch">
            <svg width="17" class="octicon octicon-syn" viewBox="0 0 12 16" version="1.1" hight="22" aria-hidden="true">
              <path fill-rule="evenodd" d="M10.24 7.4a4.15 4.15 0 01-1.2 3.6 4.346 4.346 0 01-5.41.54L4.8 10.4.5 9.8l.6 4.2 1.31-1.26c2.36 1.74 5.7 1.57 7.84-.54a5.876 5.876 0 001.74-4.46l-1.75-.34zM2.96 5a4.346 4.346 0 015.41-.54L7.2 5.6l4.3.6-.6-4.2-1.31 1.26c-2.36-1.74-5.7-1.57-7.85.54C.5 5.03-.06 6.65.01 8.26l1.75.35A4.17 4.17 0 012.96 5z"></path>
            </svg>
          </a>
        </div>

      </div>
      <div class="col-md-10 pl-2">
        <p class="card-text">{{answer.body}}</p>
        {{#if links.length}}
          <section class="answer-links">
            <span>Refs</span>
            <div>
              {{#each links}}
                <div class="d-flex" data-link-id="{{this.id}}">
                  <div class="mr-1">
                    {{#if this.body}}
                      {{{this.body}}}
                    {{else}}
                      <a href="{{this.url}}">{{this.name}}</a>
                    {{/if}}
                  </div>
                </div>
              {{/each}}
            </div>
          </section>
        {{/if}}
      </div>

      <div class="col-md-1 d-flex flex-column align-items-center justify-content-center">
        {{#unless answer.best}}
          {{#if author_check }}
            <a href="/answers/{{answer.id}}/choose_best" class="best-anaswer-link" title="Best answer" data-confirm="Are you sure?" data-type="json" data-remote="true" rel="nofollow" data-method="patch">
              <svg width="18" class="octicon octicon-thumbsup" viewBox="0 0 16 16" version="1.1" hight="18" aria-hidden="true">
                <path fill-rule="evenodd" d="M15.98 8.17l-.97 5.95C14.84 15.5 13.13 16 12 16H5.69c-.2 0-.38-.05-.53-.14L3.72 15H2c-1.06 0-2-.94-2-2V9c0-1.06.94-2.02 2-2h2c.91 0 1.39-.45 2.39-1.55.91-1 .88-1.8.63-3.27-.08-.5.06-1 .42-1.42C7.83.29 8.42 0 9 0c1.83 0 3 3.71 3 5.01l-.02.98h2.04c1.16 0 1.95.8 1.98 1.97 0 .11-.02.21-.02.21zm-1.97-1.19h-1.99c-.7 0-1.03-.28-1.03-.97l.03-1.03c0-1.27-1.17-4-2-4-.5 0-1.08.5-1 1 .25 1.58.34 2.78-.89 4.14C6.11 7.25 5.36 8 4 8v6l1.67 1H12c.73 0 1.95-.31 2-1l.02-.02 1-6c-.03-.64-.38-1-1-1h-.01z"></path>
              </svg>
            </a>
          {{/if}}
        {{/unless}}
      </div>
    </div>
  </div>
</div>
